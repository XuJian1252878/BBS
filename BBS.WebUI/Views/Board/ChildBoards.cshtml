@using BBS.Domain.Entities;
@model IEnumerable<BBS.Domain.Entities.Board>

@{
    ViewBag.Title = "ChildBoards";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<h2>ChildBoards</h2>

<div class="row container">
    @foreach (Board board in Model)
    {
        <div class="col s6">
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="~/Content/images/office.jpg">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">@board.Name <i class="mdi-navigation-more-vert right"></i></span>
                    <p><a href="@Url.Action("PostsInBoard", "Post", new { boardID = board.ID })">This is a link</a></p>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">@board.Name <i class="mdi-navigation-close right"></i></span>
                    <p>@board.Description</p>
                </div>
            </div>
        </div>
    }
</div>