@if (Session["User"] == null)
{
    <div class="divider"></div>
    <div class="row">
        <div class="col s2 offset-s2">
            <a class="waves-effect waves-light btn-large" href="/User/SignUp"><i class="mdi-action-account-child right"></i>SignUp</a>
        </div>
        <div class="col s2 offset-s4">
            <a class="waves-effect waves-light btn-large" href="/User/Login"><i class="mdi-action-home right"></i>Login</a>
        </div>
    </div>
    <div class="divider"></div>
}

<div class="container">
    <div class="row">
        @{
            IEnumerable<Board> rootBoards = ViewBag.RootBaords;
            foreach (Board board in rootBoards)
            {
                <div class="col s6 m6">
                    <div class="card">
                        <div class="card-image">
                            <img src="~/Content/images/sample-1.jpg"/>
                            <span class="card-title">@board.Name</span>
                        </div>
                        <div class="card-content">
                            <p>@board.Description</p>
                        </div>
                        <div class="card-action">
                            <a href="@Url.Action("ChildBoards", "Board", new { boardID = board.ID})">进入板块</a>
                            <a href="#">进入板块</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>